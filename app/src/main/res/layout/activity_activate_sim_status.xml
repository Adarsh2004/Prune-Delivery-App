<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activate_sim_status"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_activate_sim_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text="Activate Sim"
        android:textColor="@color/textcolor"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_name_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/cardcolor2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/usersign_sim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box_layout"
        android:hint="   User Name"
        android:saveEnabled="true"
        android:shadowColor="@color/cardcolor2"
        android:textColorHint="@color/cardcolor1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Address"
        android:textColor="@color/cardcolor2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/address_sim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box_layout"
        android:hint="   address"
        android:textColorHint="@color/cardcolor1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Sim"
        android:textColor="@color/cardcolor2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/sim_activate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box_layout"
        android:hint="   Sim"
        android:textColorHint="@color/cardcolor1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_mobile_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Mobile Number"
        android:textColor="@color/cardcolor2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mobile_activate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box_layout"
        android:hint="   Mobile Number"
        android:textColorHint="@color/cardcolor1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Plan"
        android:textColor="@color/cardcolor2"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/plan_sim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/box_layout"
        android:hint="   Plan"
        android:textColorHint="@color/cardcolor1"
        android:textSize="15dp" />

    <Button
        android:id="@+id/activatebutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/buttonshape"
        android:text="Payment Mode"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


</LinearLayout>