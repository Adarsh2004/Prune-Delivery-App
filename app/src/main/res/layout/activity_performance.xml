<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Performance">

    <TextView
        android:id="@+id/perfmnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Performance"
        android:textColor="@color/DarkMagenta"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:gravity="bottom"
            android:text="Select Month"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/Cardperformance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="10dp">

            <Spinner
                android:id="@+id/spinnr_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:hint="Orders Delivered"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Placeholder"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:hint="Orders Rejected"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Placeholder"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:hint="Pending Orders"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:hint="Placeholder"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>