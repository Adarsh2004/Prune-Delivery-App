<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".personal_details_screen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="4dp">


        <TextView
            android:id="@+id/attendance"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/create_your_account"
            android:textColor="@color/DarkMagenta"
            android:textSize="20sp"
            android:textStyle="bold"/>



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:cardBackgroundColor="@color/spinner_color">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <Spinner
                android:id="@+id/language_list_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:textSize="15sp"
        android:id="@+id/text_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:text="@string/head_content_subpage"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_verify1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/subtext_first"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_details"/>

                <ImageView
                    android:id="@+id/subbutt_first"
                    android:background="@drawable/next"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/subtext_first"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_verify2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/subsecond_head"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/identity_details"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/subutt_sec"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/subsecond_head"
                    android:background="@drawable/next" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_verify3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subthird_head"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/driving_license"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/subbutt_third"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/subthird_head"
                    android:background="@drawable/next" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_verify4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subhead_fourth"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_account_details"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/subutt_four"
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/subhead_fourth"
                    android:background="@drawable/next" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/sec_sub_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttonshape"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
