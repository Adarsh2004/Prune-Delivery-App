<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ordertxt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Brown"
        android:orientation="horizontal">


        <TextView
            android:layout_width="110dp"
            android:layout_height="40sp"
            android:layout_marginStart="32dp"
            android:gravity="center"
            android:text="@string/oder_details"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ordertxt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/merchant_name"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/merchant_address"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/customer_name"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/phone_number"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/product"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/addres"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/address_id"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/time_slot"
                android:textColor="@color/SkyBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeslot_id"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/Close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollorder"
        android:text="@string/close" />


</RelativeLayout>